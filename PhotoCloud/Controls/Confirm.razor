@inherits ConfirmBase

@if (ShowConfirmation)
{

<div class="modal fade show d-block" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">@ConfirmationTitle</h5>
                <button @onclick="()=>OnConfirmationChange(false)" type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @ConfirmationMessage
            </div>
            <div class="modal-footer">
                <button @onclick="()=>OnConfirmationChange(false)" type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button @onclick="()=>OnConfirmationChange(true)" type="button" class="btn btn-danger">@ConfirmationButton</button>
            </div>
        </div>
    </div>
</div>
}